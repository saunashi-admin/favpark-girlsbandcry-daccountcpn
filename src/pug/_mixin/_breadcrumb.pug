//- http://schema.org/BreadcrumbList
//- https://www.w3.org/TR/wai-aria-practices/examples/breadcrumb/index.html
mixin breadcrumb(levels, dir = '', src = '')
	ul.c-breadcrumb__list(itemscope itemtype='http://schema.org/BreadcrumbList')
		each level, index in levels
			- var count = index + 1
			- var text = level[0]
			- var link = level[1]
			- var position = level[2]

			li.c-breadcrumb__item(itemprop='itemListElement' itemscope itemtype='http://schema.org/ListItem')
				if position != 'is-current'
					a.c-breadcrumb__link(href=`${link}` class=`${position}` itemprop='item')
						span(itemprop='name') !{text}
						meta(itemprop='position' content!=count)
				else
					span.c-breadcrumb__link(class=`${position}` itemprop='item')
						span(itemprop='name') !{text}
						meta(itemprop='position' content!=count)

