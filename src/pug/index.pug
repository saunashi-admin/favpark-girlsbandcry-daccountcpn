extends ./_layout/_home.pug
block vars
	include ./_config/_config.pug
	- var key = 'top'
	- var page = pages[key]
	- var bodyClass = 'p-home'

block contents
	.p-home__kv
		.p-homeKv__img
			+sourceImg('kv_01', 'jpg', '', '', 'home/', '375', '401')
		section.p-homeKv__detail
			h1.p-homeKv__heading
				img(src=imgPath+'common/logo.svg', alt='ガールズバンドクライ展', width='344', height='46', fetchpriority='high').p-homeKv__headingImg
			p.p-homeKv__place
				img(src=imgPath+'home/text_01.svg', alt='dアカウントチェックインキャンペーン（東京会場）', width='332', height='41', fetchpriority='high').p-homeKv__placeImg

	section.p-home__about#about
		.l-container(data-scroll='content')
			p.p-homeAbout__paragraph
				| 期間中、会場に設置してある2次元バーコードを読み込みｄアカウントを新規登録または登録済みの方全員に、キャンペーンオリジナル画像（ランダム５種のうち1枚）をプレゼント致します。
			dl.p-homeAbout__detailList
				.p-homeAbout__detailItem
					dt.p-homeAbout__detailTitle
						| 【イベント期間】
					dd.p-homeAbout__detailContent
						p.p-homeAbout__detailParagraph
							| 2025年4月9日 〜 2025年4月20日
				.p-homeAbout__detailItem
					dt.p-homeAbout__detailTitle
						| 【参加方法】
					dd.p-homeAbout__detailContent
						p.p-homeAbout__detailParagraph
							| 1.会場に設置してあるQRコードを読み込み
							br
							| 2.dアカウントエントリー
							br
							| 3.限定画像GET（ランダム５種のうち１枚）
			.p-homeAbout__btn
				a.c-btn.-primary(href='https://ent.campaign.docomo.ne.jp/?campaignId=CPM24971', target='_blank')
					span.c-btn__text
						| エントリーはこちら
					span.c-btn__icon.-arrow.-external

